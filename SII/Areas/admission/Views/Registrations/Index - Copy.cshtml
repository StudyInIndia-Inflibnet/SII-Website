                    <div class="reg_main mt20">
                        <label>First Name:</label>
                        <span>
                            <input type="text" required placeholder="Enter First Name" name="FirstName" class="form-control border-redius allow_only_alphabet">
                        </span>
                    </div>
                    <div class="reg_main mt15">
                        <label>Last Name:</label>
                        <span>
                            <input type="text" placeholder="Enter Last Name" name="LastName" class="form-control border-redius allow_only_alphabet">
                        </span>
                    </div>

                    <div class="reg_main mt15">

                        <label>Mobile No:</label>
                        <table>
                            <tr>
                                <td style="width:100%">

                                    <div class="row">
                                        <div class="col-md-5">
                                            @Html.DropDownList("CountryCode", new SelectList(ViewBag.CountryCode, "Country_id", "country_code"),
                                    "--Select--",
                                    new
                                    {
                                        @class = "form-control border-redius ",
                                        @id = "drpcountrycode",
                                        @required = ""
                                    })
                                        </div>
                                        <div class="col-md-7">
                                            <input type="text" required placeholder="Enter Mobile" name="Mobile" maxlength="12" data-parsley-type="number" class="form-control border-redius allow_only_number" id="txtmobile" data-parsley-minlength="8" data-parsley-minlength-message="Invalid mobile number entered.">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="reg_main mt15">
                        <label style="width:100%;">
                            <input type="checkbox" checked="checked" id="whatsapp_consent" />
                            <small class="smalllabel">
                                I would like to receive updates, reminders and notifications about Study in India program on my WhatsApp contact number.
                            </small>
                        </label>
                    </div>
                    <div class="clear-xs"></div>
                    <div class="reg_main mt15">
                        <label>Country <small>(Nationality)</small>:</label>
                        <span>
                            @Html.DropDownList("Country", new SelectList(ViewBag.Country, "Country_id", "Country_Name"),
                            "--Select--",
                            new
                            {
                                @class = "form-control border-redius",
                                @id = "drpCountryofStay",
                                @required = ""
                            })
                        </span>
                    </div>
                    <div class="clear-xs"></div>
                    <div class="reg_main mt15">
                        <label>Date of Birth:</label>
                        <table>
                            <tr>
                                <td style="width:100%">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <select id="drpDates" name="Date" class="form-control border-redius" required>
                                                <option value="">DD</option>
                                                @{
                                                    for (int i = 1; i <= 31; i++)
                                                    {
                                                        if (i < 10)
                                                        {
                                                            <option>0@(i)</option>
                                                        }
                                                        else
                                                        {
                                                            <option>@i</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-5">
                                            <select name="Month" class="form-control border-redius" id="drpMonths" required="">
                                                <option value="" selected>Month</option>
                                                <option value="01">January</option>
                                                <option value="02">February</option>
                                                <option value="03">March</option>
                                                <option value="04">April</option>
                                                <option value="05">May</option>
                                                <option value="06">June</option>
                                                <option value="07">July</option>
                                                <option value="08">August</option>
                                                <option value="09">September</option>
                                                <option value="10">October</option>
                                                <option value="11">November</option>
                                                <option value="12">December</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownList("Year", new SelectList(ViewBag.Year, "Year", "Year"),
                                    "YYYY",
                                    new
                                    {
                                        @class = "form-control border-redius",
                                        @id = "drpYear",
                                        @required = ""
                                    })
                                        </div>
                                    </div>
                                </td>
                                @*<td style="width:30%">
                        <select id="drpDates" name="Date" class="form-control border-redius" required>
                            <option value="">--Select--</option>
                            @{
                                for (int i = 1; i <= 31; i++)
                                {
                                    if (i < 10)
                                    {
                                        <option>0@(i)</option>
                                    }
                                    else
                                    {
                                        <option>@i</option>
                                    }
                                }
                            }
                        </select>
                    </td>
                    <td style="width:35%">
                        <select name="Month" class="form-control border-redius" id="drpMonths" required="">
                            <option value="" selected>---Select---</option>
                            <option value="01">January</option>
                            <option value="02">February</option>
                            <option value="03">March</option>
                            <option value="04">April</option>
                            <option value="05">May</option>
                            <option value="06">June</option>
                            <option value="07">July</option>
                            <option value="08">August</option>
                            <option value="09">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </td>
                    <td style="width:35%">
                        @Html.DropDownList("Year", new SelectList(ViewBag.Year, "Year", "Year"),
                        "--Select--",
                        new
                        {
                            @class = "form-control border-redius",
                            @id = "drpYear",
                            @required = ""
                        })
                    </td>*@
                            </tr>
                        </table>
                        @*<span>
                <input type="text" id="txtdateofbirth" class="form-control border-redius datetimepicker" required name="DateOfBirth" placeholder="Date of Birth" readonly>
            </span>*@
                    </div>
                    <div class="clear-xs"></div>
                    <div class="reg_main mt15">
                        <label>Email:</label>
                        <span>
                            <input type="email" required placeholder="Enter email" name="Email" class="form-control border-redius" id="txtemailreg" oncopy="return false" onpaste="return false" oncut="return false">
                        </span>
                    </div>
                    <div class="reg_main mt15 mb15">
                        <label>Confirm Email:</label>
                        <span>
                            <input type="email" required placeholder="Enter Confirm Email" name="Email" class="form-control border-redius" id="txtconfirmemail" data-parsley-equalto="#txtemailreg" data-parsley-error-message="Confirm email should be same as email." oncopy="return false" onpaste="return false" oncut="return false">
                        </span>
                    </div>

                    <div class="reg_main mt15 hide">
                        <label>Applying For Course:</label>
                        <span>
                            <select class="form-control border-redius " id="ApplyingForCourse" name="ApplyingForCourse" required="">
                                <option selected value="Full Term Courses">Full Term Courses (UG, PG and PhD)</option>
                                <option value="Short Term Niche Courses">Short Term Niche Courses (Yoga, Ayurveda etc.)</option>
                            </select>
                        </span>
                    </div>
                    <div class="reg_main mt15">
                        <label>Password:</label>
                        <span>
                            <input type="password" required placeholder="Enter Password" class="form-control border-redius" id="txtpassword" name="ActualPassword">
                        </span>
                    </div>
                    <div class="reg_main mt15 mb15">
                        <label>Confirm Password:</label>
                        <span>
                            <input type="password" required placeholder="Enter Confirm Password" class="form-control border-redius" id="txtconfirmpassord" data-parsley-equalto="#txtpassword" data-parsley-error-message="Confirm password should be same as password.">
                        </span>
                    </div>
                    <div class="reg_main mt15 mb15">
                        <label>Captcha:</label>
                        <span>
                            <img id="imgLoginCaptcha" src="@Url.Content("~/")Captcha/GetCaptchaImage" tabindex="-1" style="height:75px; width:250px;">
                            <a href="javascript:;" tabindex="-1" class="btn btn-warning" id="btnRefreshCaptcha"><i class="fa fa-refresh"></i>Refresh</a>
                            <input class="form-control" type="text" required="" autocomplete="off" placeholder="Enter Captcha" name="CaptchaStr" id="txtCaptcha">
                        </span>
                        @*<span>
                @Html.reCaptcha()
            </span>*@
                    </div>
                    <div class="clear"></div>
                    <div class="reg_main mt15">
                        <label style="width:100%;">
                            <input type="checkbox"  id="IAccept" checked="checked" />
                            <small class="smalllabel">
                                I accept the terms of <a href="~/Privacypolicy" target="_blank">privacy policy</a> and would like to receive further updates about Study in India program.
                            </small>
                        </label>
                    </div>
                    <div class="clear-xs"></div>
                    <div class="mt15"><center><a class="signup-btn" id="btnRegister" href="javascript:;"><i class="fa fa-user-plus"></i>&nbsp; Sign Up</a> </center> </div>

                </div>
                <div class="col-md-1 hidden-xs hidden-sm"></div>
                <div class="col-sm-6 col-md-5 col-xs-12">
                    <h3 class="inner-title"><span><strong>WHY STUDY IN INDIA?</strong></span></h3>
                    <ul class="reg_ul">
                        <li>World's third largest <br />Higher Education System</li>
                        <li>Global IT/ITES <br />leader with thriving startup and <br />innovation ecosystem</li>
                        <li>'Value for Money' <br />education for a globally competitive standard</li>
                        <li>Its diversity extends beyond academia</li>
                        <li>Global language for course delivery: <br />English</li>
                    </ul>
                </div>

            </div>
        </form>

    </div>
</div>


@{
    ViewBag.Title = "Student Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section metatags {
    <link rel="canonical" href="https://www.studyinindia.gov.in/admission/Registrations" />
}
<div class="inner-title-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="inner-title-left">
                    <h2>Student Registration</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="inner-ttile-right text-right">
                    <h4><a href="@Url.Content("~/")Home">Home</a> / Student Registration</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- reginster area start -->
<div class="register-area section-padding">
    <div class="container">
        <form id="frmRegistration">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-6 col-md-6 col-xs-12 mb20">
                    <h3 class="inner-title"><span><strong>STUDENT REGISTRATION</strong></span></h3>
                    @*<div class="panel panel-default">
            <div class="panel-body">

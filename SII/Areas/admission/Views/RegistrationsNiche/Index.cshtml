
@{
    ViewBag.Title = "Student Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-title-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="inner-title-left">
                    <h2>Student Registration</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="inner-ttile-right text-right">
                    <h4><a href="@Url.Content("~/")Home">Home</a> / Student Registration</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- reginster area start -->
<div class="register-area section-padding">
    <div class="container">

        @Html.AntiForgeryToken()
        <div class="row">
            <form id="frmRegistration">

                <input type="hidden" value=@TempData["instituteid"].ToString() name="instituteid" id="instituteid" />
                <input type="hidden" value=@TempData["NicheCourseId"].ToString() name="NicheCourseID" id="NicheCourseID" />


                <div class="col-sm-6 col-md-6 col-xs-12 mb20">
                    <h3 class="inner-title"><span><strong>STUDENT REGISTRATION</strong></span></h3>
                    @*<div class="panel panel-default">
                            <div class="panel-body">
                                <div role="alert" class="alert alert-primary alert-icon alert-icon-border alert-dismissible">
                                    <div class="message">
                                        <strong>"Thank you for showing interest in Study in India initiative. The registration deadline for academic year 2018 has been over. In case you have completed your application and submitted your preferences for Indian colleges, the results will be declared shortly"</strong>
                                    </div>
                                </div>
                            </div>
                        </div>*@

                    <div class="reg_main mt20">
                        <label>First Name:</label>
                        <span>
                            <input type="text" required placeholder="Enter First Name" name="FirstName" class="form-control border-redius allow_only_alphabet">
                        </span>
                    </div>
                    <div class="reg_main mt15">
                        <label>Last Name:</label>
                        <span>
                            <input type="text" placeholder="Enter Last Name" name="LastName" class="form-control border-redius allow_only_alphabet">
                        </span>
                    </div>
                    <div class="reg_main mt15">
                        <label>Mobile No:</label>
                        <span>
                            <input type="text" required placeholder="Enter Mobile" name="Mobile" maxlength="12" data-parsley-type="number" class="form-control border-redius allow_only_number" id="txtmobile" data-parsley-minlength="8" data-parsley-minlength-message="Invalid mobile number entered.">
                        </span>
                    </div>
                    <div class="clear-xs"></div>
                    <div class="clear-xs"></div>
                    <div class="reg_main mt15">
                        <label>Country:</label>
                        <span>
                            @Html.DropDownList("Country", new SelectList(ViewBag.Country, "Country_id", "Country_Name"),
                                    "--Select--",
                                    new
                                    {
                                        @class = "form-control border-redius",
                                        @id = "drpCountryofStay",
                                        @required = ""
                                    })
                        </span>
                    </div>
                    <div class="clear-xs"></div>
                    <div class="reg_main mt15">
                        <label>Email:</label>
                        <span>
                            <input type="email" required placeholder="Enter email" name="Email" class="form-control border-redius" id="txtemailreg">
                        </span>
                    </div>
                    <div class="reg_main mt15">
                        <label>Date of Birth:</label>
                        <table>
                            <tr>
                                <td style="width:100%">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <select id="drpDates" name="Date" class="form-control border-redius" required>
                                                <option value="">DD</option>
                                                @{
                                                    for (int i = 1; i <= 31; i++)
                                                    {
                                                        if (i < 10)
                                                        {
                                                            <option>0@(i)</option>
                                                        }
                                                        else
                                                        {
                                                            <option>@i</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-5">
                                            <select name="Month" class="form-control border-redius" id="drpMonths" required="">
                                                <option value="" selected>Month</option>
                                                <option value="01">January</option>
                                                <option value="02">February</option>
                                                <option value="03">March</option>
                                                <option value="04">April</option>
                                                <option value="05">May</option>
                                                <option value="06">June</option>
                                                <option value="07">July</option>
                                                <option value="08">August</option>
                                                <option value="09">September</option>
                                                <option value="10">October</option>
                                                <option value="11">November</option>
                                                <option value="12">December</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownList("Year", new SelectList(ViewBag.Year, "Year", "Year"),
                                    "YYYY",
                                    new
                                    {
                                        @class = "form-control border-redius",
                                        @id = "drpYear",
                                        @required = ""
                                    })
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        </table>

                    </div>
                    <div class="reg_main mt15">
                        <label>Gender</label>
                        <span>
                            <select class="form-control border-redius" id="Gender" name="Gender" required="">
                                <option value="">--Select--</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </span>
                    </div>
                    <div class="reg_main mt20">
                        <label>Present Profession :</label>
                        <span>
                            <input type="text" required placeholder="Enter Present Profession" name="PresentProfession" class="form-control border-redius allow_only_alphabet">
                        </span>
                    </div>

                    <div class="reg_main mt15 hide">
                        <label>Applying For Course:</label>
                        <span>
                            <select class="form-control border-redius" id="ApplyingForCourse" name="ApplyingForCourse" required="">
                                <option selected value="Short Term Niche Courses">Short Term Niche Courses (Yoga, Ayurveda etc.)</option>
                            </select>
                        </span>
                    </div>
                    @*<div class="reg_main mt15">
                            <label>Password:</label>
                            <span>
                                <input type="password" required placeholder="Enter Password" class="form-control border-redius" id="txtpassword" name="ActualPassword">
                            </span>
                        </div>
                        <div class="reg_main mt15 mb15">
                            <label>Confirm Password:</label>
                            <span>
                                <input type="password" required placeholder="Enter Confirm Password" name="Email" class="form-control border-redius" id="txtconfirmpassord" data-parsley-equalto="#txtpassword" data-parsley-error-message="Confirm password should be same as password.">
                            </span>
                        </div>*@
                    <div class="reg_main mt15 mb15">
                        <label>Captcha:</label>
                        <span>
                            <img id="imgLoginCaptcha" src="@Url.Content("~/")Captcha/GetCaptchaImage" tabindex="-1" style="height:75px; width:250px;">
                            <a href="javascript:;" tabindex="-1" class="btn btn-warning" id="btnRefreshCaptcha"><i class="fa fa-refresh"></i>Refresh</a>
                            <input class="form-control" type="text" required="" autocomplete="off" placeholder="Enter Captcha" name="CaptchaStr" id="txtCaptcha">
                        </span>
                        @*<span>
                                @Html.reCaptcha()
                            </span>*@
                    </div>
                    <div class="clear"></div>
                    <div class="mt15"><center><a class="signup-btn" id="btnRegister"><i class="fa fa-user-plus"></i>&nbsp; Sign Up and Apply </a> </center> </div>

                </div>
            </form>
            <div class="col-md-2 hidden-xs hidden-sm">

                <h3 style="padding-top: 100px;"><span><center><strong>OR</strong></center></span></h3>
            </div>
            <form id="frmLogin">
                <input type="hidden" value=@TempData["instituteid"].ToString() name="instituteid" id="instituteid" />
                <input type="hidden" value=@TempData["NicheCourseId"].ToString() name="NicheCourseID" id="NicheCourseID" />

                <div class="col-sm-4 col-md-4 col-xs-12">
                    <h3 class="inner-title"><span><strong>Alredy Have login ID?</strong></span></h3>

                    <div class="reg_main mt20">
                        <label>Student Id:</label>
                        <span>
                            <input type="text" required id="txtStdid" placeholder="SII-S-XXXXXXXX" name="StudentID" class="form-control border-redius">
                        </span>
                    </div>

                    <div class="reg_main mt20">
                        <label>Mobile Number:</label>
                        <span>
                            <input type="text" required placeholder="Enter Mobile" name="Mobile" maxlength="12" data-parsley-type="number" class="form-control border-redius allow_only_number" id="txtmobile" data-parsley-minlength="10" data-parsley-minlength-message="Invalid mobile number entered.">
                        </span>
                    </div>
                    <div class="reg_main mt20">
                        <div class="clear"></div>
                        <div class="mt15"><center><a style="Float:right !important;" class="signup-btn" id="btnlogin"><i class="fa fa-user"></i>&nbsp; Login and Apply</a> </center> </div>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>

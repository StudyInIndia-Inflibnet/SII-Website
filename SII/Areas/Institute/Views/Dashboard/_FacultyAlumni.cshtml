<div class="row">
    <div class="col-md-12">
        @{
            SIIRepository.Institute.InstituteRepository _objRepository = new SIIRepository.Institute.InstituteRepository();
            System.Data.DataSet _ds = _objRepository.Get_Dashboard_Modal_Data(Session["InstituteID"].ToString(), "FacultyAlumni", "");
            if (_ds != null)
            {
                <h2 class="text-center">Faculty / Notable Alumni</h2>
                <h4>Faculty</h4>
                if (_ds.Tables[0].Rows.Count > 0)
                {
                    int index = 1;
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Srno</th>
                                <th>Faculty Name</th>
                                <th>Designation</th>
                                <th>Qualification </th>
                                <th>Area of Excellence</th>
                                <th>Is Regular?</th>
                            </tr>
                        </thead>
                        @foreach (System.Data.DataRow _dr in _ds.Tables[0].Rows)
                        {
                            <tr>
                                <td>
                                    @(index++)
                                </td>
                                <td>@_dr["FacultyName"].ToString()</td>
                                <td>@_dr["Designation_name"].ToString()</td>
                                <td>@_dr["Qualification_Name"].ToString()</td>
                                <td>@_dr["AreaofExcellence"].ToString()</td>
                                <td>@(_dr["IsRegular"].ToString().ToLower() == "true" ? "Yes" : "No")</td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>No data available.</td>
                            </tr>
                        </tbody>
                    </table>
                }
                <h4>Notable Alumni</h4>
                if (_ds.Tables[1].Rows.Count > 0)
                {
                    int index = 1;
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Srno</th>
                                <th>Name</th>
                                <th>Designation</th>
                                <th>Current Employer</th>
                                <th>Qualification </th>
                                <th>Area of Excellence</th>
                            </tr>
                        </thead>
                        @foreach (System.Data.DataRow _dr in _ds.Tables[1].Rows)
                        {
                            <tr>
                                <td>
                                    @(index++)
                                </td>
                                <td>@_dr["FacultyName"].ToString()</td>
                                <td>@_dr["AlumniDesignation"].ToString()</td>
                                <td>@_dr["Qualification_Name"].ToString()</td>
                                <td>@_dr["CurrentEmployer"].ToString()</td>
                                <td>@_dr["AreaofExcellence"].ToString()</td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>No data available.</td>
                            </tr>
                        </tbody>
                    </table>
                }
            }
            else
            {
                <h2>No data available.</h2>
            }
        }
    </div>
</div>
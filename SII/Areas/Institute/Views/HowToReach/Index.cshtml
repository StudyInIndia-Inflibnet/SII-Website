@{
    ViewBag.Title = "Campus";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
}
@section PageHead{
    <div class="row">
        <div class="col-md-12">
            <h3>How to Reach Campus<span style="color: red"> (@Session["InstituteID"].ToString()&nbsp;&nbsp;@Session["InstituteName"].ToString())</span></h3>
        </div>
    </div>
}
<div class="row">
    @*<div class="col-md-12" style="">
            @Html.Partial("_InstituteMenus")
        </div>*@
    <div class="col-md-12">
        <div class="panel panel-default panel-border-color panel-border-color-custom">
            <div class="tab-container">
                <div class="tab-content">
                    <h3>How to Reach Campus</h3>
                    <form id="frm" method="post">
                        @Html.AntiForgeryToken()
                        @*<input type="hidden" name="InstituteID" id="hdfInstituteID" value="0" />*@
                        <input type="hidden" name="ID" id="hdfID" value="0" />
                        <div class="row">
                            <div class="col-md-12">
                                <button id="btnNewReach" type="button" class="btn btn-primary pull-right">Add New</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mode of travel&nbsp;<span style="color:red">*</span></label>
                                    <select class="form-control" name="ReachBy" required id="drpmodeoftravel">
                                        <option value="By Air">By Air</option>
                                        <option value="By Train">By Train</option>
                                        <option value="By Road">By Road</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Nearest Airport/Station </label>
                                    <input type="text" class="form-control" id="txtNearByStationName" name="NearByStationName" placeholder="Near by Station Name" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Approx time to reach&nbsp;<span style="color:red">*</span></label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" class="form-control allow_only_number" id="txtApproxTime" name="ApproxTime" placeholder="Approx time to reach" data-parsley-type="number" required="" maxlength="2" />
                                        </div>
                                        <div class="col-md-6">
                                            <select class="form-control" name="ApproxTimeType" id="drpApproxTimeType">
                                                <option>Hours</option>
                                                <option>Mins</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Distance&nbsp;<span style="color:red">*</span></label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" class="form-control allow_only_number" id="txtDistance" name="Distance" placeholder="Distance" data-parsley-type="number" required="" maxlength="3" />
                                        </div>
                                        <div class="col-md-6">
                                            <select class="form-control" name="DistanceType" id="drpDistanceType" required>
                                                <option value="KM">kilometer</option>
                                                <option value="Miles">Miles</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Remarks&nbsp;<span style="color:red">*</span></label>
                                    <textarea id="textremarks" rows="3" name="remarks" required="" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-7">
                                            <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
                                            <button id="btnCancel" type="reset" class="btn btn-default hide">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-hover ">
                                <thead>
                                    <tr>
                                        <th>Srno</th>
                                        <th>Reach by</th>
                                        <th>Station name</th>
                                        <th>Approx Time</th>
                                        <th>Distance</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles{
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/Scipts/Areas/Institute/HowToReach.js"></script>
    <script>
        $(document).ready(function () {
            $('#ulMainTab').on('click', 'a', function (e) {
                e.preventDefault();
                if ($(this).parent().hasClass("active")) {
                    return false;
                }
            });
        });
    </script>
}





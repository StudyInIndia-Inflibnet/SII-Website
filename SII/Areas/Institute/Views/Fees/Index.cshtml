@{
    ViewBag.Title = "Cost of Living";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
}
@section PageHead{
    <div class="row">
        <div class="col-md-12">
            <h3>Cost of Living<span style="color: red"> (@Session["InstituteID"].ToString()&nbsp;&nbsp;@Session["InstituteName"].ToString())</span></h3>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-border-color panel-border-color-custom">
            <div class="tab-container">
                <div class="tab-content">
                    @*Approx Cost Of living*@
                    <div id="ApproxCostOfliving" class="panel-body in">
                        <form id="frmCostofliving" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" value="0" name="ID" id="hdfID" />
                            <div class="row">
                                <div class="col-md-12">
                                    <button id="btnNew" type="button" class="btn btn-primary pull-right">Add New</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Nature of cost category&nbsp;<span style="color:red">*</span></label>
                                        @Html.DropDownList("Natureofcostcategory_id", new SelectList(ViewBag.NatureofCostCategory, "Natureofcostcategory_id", "Natureofcostcategoryname"),
                                            "--Select--",
                                            new
                                            {
                                                @class = "form-control CourseChange",
                                                @id = "drpNatureofcost",
                                                @required = ""
                                            })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Approx. Monthly Cost&nbsp;<span style="color:red">*</span></label>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <select class="form-control" id="ApproximatCostType" name="ApproximatCostType" required>
                                                    <option value="">--Select--</option>
                                                    <option>INR</option>
                                                    <option>USD</option>
                                                </select>
                                            </div>
                                            <div class="col-md-8">
                                                <input type='text' class="form-control allow_only_number" name="ApproximatCost" id="txtappoxcost" required maxlength="8" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="row">
                                            <input type="file" name="upload" id="fileUpload" value="" />
                                            <input type='button' class="btn btn-primary" name="btnUpload" id="btnUpload" value="Upload" />

                                            <a href="#" target="_blank" id="btnViewFile" style="display:none">View File</a>
                                            <input type='hidden' name="UploadedFilePath" id="UploadedFilePath"/> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                    
                            
                    </form>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-hover ">
                                <thead>
                                    <tr>
                                        <th>Srno</th>
                                        <th>Nature of cost category</th>
                                        <th>Cost / price</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyCostofliving"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
@section styles{
    <link href="~/assets/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/Scipts/Areas/Institute/CostofLiving.js"></script>
    <script>
        $(document).ready(function () {
            $('#ulMainTab').on('click', 'a', function (e) {
                e.preventDefault();
                if ($(this).parent().hasClass("active")) {
                    return false;
                }
            });
        });
    </script>
}


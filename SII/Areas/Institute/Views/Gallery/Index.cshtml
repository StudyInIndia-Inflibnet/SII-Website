
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
}
@section PageHead{
    <div class="row">
        <div class="col-md-12">
            <h3>Gallery<span style="color: red"> (@Session["InstituteID"].ToString()&nbsp;&nbsp;@Session["InstituteName"].ToString())</span></h3>
        </div>
    </div>
}
<div class="row">
    @*<div class="col-md-12" style="">
            @Html.Partial("_InstituteMenus")
        </div>*@
    <div class="col-md-12">
        <div class="panel panel-default panel-border-color panel-border-color-custom">
            <div class="tab-container">
                <ul id="ulMainTab" class="nav nav-tabs">
                    <li class="active"><a href="#navPhotoGallery" data-toggle="tab">Photo Gallery</a></li>
                    <li><a href="#navVideoGallery" data-toggle="tab">Video Gallery</a></li>
                </ul>
                <div class="tab-content">
                    @*Photo Gallery*@
                    <div id="navPhotoGallery" class="tab-pane active cont">
                        <form id="frmPhotoGallery" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ID" id="hdfPhotoID" value="0" />
                            <div class="row">
                                <div class="col-md-12">
                                    <button id="btnNewImage" type="button" class="btn btn-primary pull-right">Add New</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Category&nbsp;<span style="color:red">*</span></label>
                                        @Html.DropDownList("CategoryID", new SelectList(ViewBag.GallaryCategory, "GallaryCategory_id", "GallaryCategory_Name"),
                                        "--Select--",
                                        new
                                        {
                                            @class = "form-control",
                                            @id = "drpPhotoCategoryID",
                                            @required = ""
                                        })
                                        @*<select class="form-control" id="drpPhotoCategoryID" name="CategoryID" required="">
                        <option value="">--Select Category--</option>
                        <option value="1">Campus</option>
                        <option value="2">Hostel</option>
                    </select>*@
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="form-group">
                                        <label>Image&nbsp;<span style="color:red">*</span></label>
                                        <input type="file" id="fuPhotoImagePath" name="ImagePath" required="" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Description&nbsp;<span style="color:red">*</span></label>
                                        <textarea class="form-control" name="Description" id="txtPhotoDescription" placeholder="Description" required=""></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-7">
                                                <button id="btnSavePhoto" type="submit" class="btn btn-primary">Save</button>
                                                <button id="btnCancelPhoto" type="reset" class="btn btn-default hide">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered table-hover ">
                                    <thead>
                                        <tr>
                                            <th>Srno</th>
                                            <th>Category</th>
                                            @*<th>Photo</th>*@
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyPhotoGallery"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @*Video Gallery*@
                    <div id="navVideoGallery" class="tab-pane">
                        <form id="frmVideoGallery" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ID" id="hdfVideoID" value="0" />
                            <div class="row">
                                <div class="col-md-12">
                                    <button id="btnNewVideo" type="button" class="btn btn-primary pull-right">Add New</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Category&nbsp;<span style="color:red">*</span></label>
                                        @Html.DropDownList("CategoryID", new SelectList(ViewBag.GallaryCategory, "GallaryCategory_id", "GallaryCategory_Name"),
                                        "--Select--",
                                        new
                                        {
                                            @class = "form-control",
                                            @id = "drpVideoCategoryID",
                                            @required = ""
                                        })
                                        @*<select class="form-control" id="drpVideoCategoryID" name="CategoryID" required="">
                        <option value="">--Select Category--</option>
                        <option value="1">Campus</option>
                        <option value="2">Hostel</option>
                    </select>*@
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Video URL&nbsp;<span style="color:red">*</span></label>
                                        <input id="txtVideoURL" type="url" class="form-control" name="VideoURL" placeholder="Video URL" required="" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Description&nbsp;<span style="color:red">*</span></label>
                                        <textarea class="form-control" name="Description" id="txtVideoDescription" placeholder="Description" required=""></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-7">
                                                <button id="btnSaveVideo" type="submit" class="btn btn-primary">Save</button>
                                                <button id="btnCancelVideo" type="reset" class="btn btn-default hide">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered table-hover ">
                                    <thead>
                                        <tr>
                                            <th>Srno</th>
                                            <th>Category</th>
                                            <th>Video URL</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyVideoGallery"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles{
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/Scipts/Areas/Institute/PhotoGallery.js"></script>
    <script src="~/Scipts/Areas/Institute/VideoGallery.js"></script>
    <script>
        $(document).ready(function () {
            $('#ulMainTab').on('click', 'a', function (e) {
                e.preventDefault();
                if ($(this).parent().hasClass("active")) {
                    return false;
                }
            });
        });
    </script>
}














@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageHead{
    <div class="row">
        <div class="col-md-12">
            <h3>Detail&nbsp;<span style="color: red">( @TempData.Peek("studentid").ToString() -  @TempData.Peek("studentname").ToString() )</span></h3>
        </div>
    </div>
}
<div class="row">
    <div class="col-xs-12 col-md-4 ">
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-divider xs-pb-15">Basic Information</div>
            <div class="panel-body xs-pt-25">
                @{ foreach (var item in ViewBag.StudentdDashboard)
                    {
                        <table class="table table-bordered w1">
                            <tr>
                                <td class="text-left"><strong>Student name</strong></td>
                                <td><i class="@(item.FirstName != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Mobile</strong></td>
                                <td><i class="@(item.Mobile != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Email</strong></td>
                                <td><i class="@(item.Email != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>DateOfBirth</strong></td>
                                <td><i class="@(item.DateOfBirth != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Nationality</strong></td>
                                <td><i class="@(item.Nationality != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Residential Address</strong></td>
                                <td><i class="@(item.Residential != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Permanent Address</strong></td>
                                <td><i class="@(item.Permanent != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align:center">
                                    <a href="@Url.Content("~/")Admin/PreviewStudent/ViewDetails?d=BasicInformation&ID=@TempData.Peek("studentid").ToString()&Name=@TempData.Peek("studentname").ToString()" class="btn btn-warning btn-sm" title="View" target="_blank"><i class="mdi mdi-desktop-mac"></i> Basic Information</a>
                                </td>
                            </tr>
                        </table>
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4 ">
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-divider xs-pb-15">Background Information</div>
            <div class="panel-body xs-pt-25">
                @{ foreach (var item in ViewBag.StudentdDashboard)
                    {
                        <table class="table table-bordered w1">
                            <tr>
                                <td class="text-left"><strong>Passport Details</strong></td>
                                <td><i class="@(item.PassportNo != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Citizenship Details</strong></td>
                                <td><i class="@(item.CitizenshipNumber != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Student Reference Details</strong></td>
                                <td><i class="@(item.StudentRefrenceDetail != "2" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align:center">
                                    <a href="@Url.Content("~/")Admin/PreviewStudent/ViewDetails?d=BackgroundInformation&ID=@TempData.Peek("studentid").ToString()&Name=@TempData.Peek("studentname").ToString()" class="btn btn-warning btn-sm" title="View" target="_blank"><i class="mdi mdi-desktop-mac"></i> Background Information</a>
                                </td>
                            </tr>
                        </table>
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4 ">
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-divider xs-pb-15">Basic Information</div>
            <div class="panel-body xs-pt-25">
                @{ foreach (var item in ViewBag.StudentdDashboard)
                    {
                        <table class="table table-bordered w2">
                            <tr>
                                <td class="text-left"><strong>Academic Information(s)</strong></td>
                                <td>
                                    <table class="table-bordered">
                                        <tr>
                                            <td>Educational Qualification</td>
                                            <td><i class="@(item.AcademicInformation_EC != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                                        </tr>
                                        <tr>
                                            <td>Additional Qualification</td>
                                            <td><i class="@(item.AcademicInformation_AE != "1" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                                        </tr>

                                    </table>
                                </td>
                                <td><a href="@Url.Content("~/")Admin/PreviewStudent/ViewDetails?d=AcademicInformation&ID=@TempData.Peek("studentid").ToString()&Name=@TempData.Peek("studentname").ToString()" class="btn btn-warning btn-sm" title="View" target="_blank"><i class="mdi mdi-desktop-mac"></i></a></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Select Discipline(s)</strong></td>
                                <td colspan="2">@item.Disciplinelist</td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Total course(s) selected</strong></td>
                                <td>@item.TotalChoicefill</td>
                                <td><a href="@Url.Content("~/")Admin/PreviewStudent/ViewDetails?d=ChoiceFilling&ID=@TempData.Peek("studentid").ToString()&Name=@TempData.Peek("studentname").ToString()" class="btn btn-warning btn-sm" title="View" target="_blank"><i class="mdi mdi-desktop-mac"></i></a></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Document(s) Upload</strong></td>
                                <td>@item.Uploded_doc uploaded / @item.Doc_required total documents</td>
                                <td><a href="@Url.Content("~/")Admin/PreviewStudent/ViewDetails?d=DocumentInformation&ID=@TempData.Peek("studentid").ToString()&Name=@TempData.Peek("studentname").ToString()" class="btn btn-warning btn-sm" title="View" target="_blank"><i class="mdi mdi-desktop-mac"></i></a></td>
                            </tr>
                            <tr>
                                <td class="text-left"><strong>Final Submition</strong></td>
                                <td colspan="2"><i class="@(item.finalSubmit != "True" ? "fa fa-exclamation-triangle" : "fa fa-check-square-o")"></i></td>
                            </tr>
                        </table>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section styles{
    <link href="~/assets/lib/daterangepicker/css/daterangepicker.css" rel="stylesheet" />
    <link href="~/assets/lib/morrisjs/morris.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="assets/lib/material-design-icons/css/material-design-iconic-font.min.css" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/lib/morrisjs/morris.css" rel="stylesheet" />
    <style>
        .fa-exclamation-triangle {
            color: #cb5705;
            font-size: 18px;
            font-weight: bold;
        }

        .fa-check-square-o {
            color: #3da80c;
            font-size: 18px;
            font-weight: bold;
        }

        .table.w1 tr td:nth-child(2) {
            width: 20%;
            text-align: center;
        }

        .table.w2 tr td:nth-child(2) {
            width: 40%;
            text-align: center;
            font-weight: 400;
        }
    </style>
}
@section scripts{
    <script src="~/assets/lib/jquery.counterup/waypoints.min.js"></script>
    <script src="~/assets/lib/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/assets/lib/moment.js/min/moment.min.js"></script>
    <script src="~/assets/lib/daterangepicker/js/daterangepicker.js"></script>
    <script src="~/assets/lib/raphael/raphael-min.js" type="text/javascript"></script>
    <script src="~/assets/lib/morrisjs/morris.min.js"></script>
}



<form id="frmStudentBasic">
    @Html.AntiForgeryToken()
    <input type="hidden" id="hdnstudentid" value="@TempData.Peek("Studentid").ToString()" name="studentid" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Agency Name<span style="color: red"> *</span></label>
                <select id="drpagencyname" class="form-control" required name="agency_det_id"></select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>First Name <span style="color: red"> *</span></label>
                <input type="text" id="txtFname" class="form-control allow_only_alphabet" data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed." maxlength="20" required name="FirstName" placeholder="First Name">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Middle Name</label>
                <input type="text" id="txtMname" class="form-control allow_only_alphabet" maxlength="20" data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed." name="MiddleName" placeholder="Middle Name">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Last Name<span style="color: red"> *</span></label>
                <input type="text" id="txtLname" class="form-control allow_only_alphabet" maxlength="20" data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed." required name="LastName" placeholder="Last Name">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Date of Birth<span style="color: red"> *</span></label>
                <input type="text" id="txtdateofbirth" class="form-control datetimepicker" required name="DateOfBirth" placeholder="Date of Birth" readonly>
                <input type="text" id="txtYear" class="form-control" style="display:none">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Gender<span style="color: red"> *</span></label>
                <select id="drpGender" class="form-control" required name="Gender">
                    <option value="">-Select-</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Email<span style="color: red"> *</span></label>
                <input type="email" id="txtemail" class="form-control" required name="Email" placeholder="Email">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Contact Number<span style="color: red"> *</span></label>
                <div class="row">
                    <div class="col-md-4">
                        @Html.DropDownList("CountryCode", new SelectList(ViewBag.Country, "Country_id", "country_code"),
                            "--Select--",
                            new
                            {
                                @class = "form-control",
                                @id = "drpcountrycode",
                                @required = ""
                            })
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="txtMobile" maxlength="12" class="form-control allow_only_number" placeholder="Mobile" name="Mobile" required="">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Nationality<span style="color: red"> *</span></label>
                @Html.DropDownList("Nationality", new SelectList(ViewBag.Nationality, "Nationality_id", "Nationality_Name"),
                    "--Select--",
                    new
                    {
                        @class = "form-control",
                        @id = "drpNationality",
                        @required = ""

                    })
            </div>
        </div>
        <div class="col-md-4" style="display:none;">
            <div class="form-group">
                <label>Country of Stay<span style="color: red"> </span></label>
                @Html.DropDownList("CountryToStay", new SelectList(ViewBag.Country, "Country_id", "Country_Name"),
                    "--Select--",
                    new
                    {
                        @class = "form-control",
                        @id = "drpCountryofStay"
                    })
            </div>
        </div>
    </div>


@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="panel panel-default panel-border-color panel-border-color-primary">
    <div class="panel-body">
        <form id="frmRegistration">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>First Name <span style="color: red"> *</span></label>
                        <input type="text" id="txtFname" class="form-control allow_only_alphabet" data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed." maxlength="20" required name="FirstName" placeholder="First Name">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Last Name<span style="color: red"> *</span></label>
                        <input type="text" id="txtLname" class="form-control allow_only_alphabet" maxlength="20" data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed." required name="LastName" placeholder="Last Name">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Date of Birth<span style="color: red"> *</span></label>
                        <input type="text" id="txtdateofbirth" class="form-control datetimepicker" required name="DateOfBirth" placeholder="Date of Birth" readonly>
                        <input type="text" id="txtYear" class="form-control" style="display:none">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Mobile No:<span style="color: red"> *</span></label>
                        <input type="text" id="txtmobile" class="form-control" required name="Mobile" placeholder="Mobile">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email<span style="color: red"> *</span></label>
                        <input type="email" id="txtemail" class="form-control" required name="Email" placeholder="Email">
                    </div>
                </div>
                <div class="col-md-4" style="display:block;">
                    <div class="form-group">
                        <label>Country<span style="color: red">*</span></label>
                        @Html.DropDownList("Country", new SelectList(ViewBag.Country, "Country_id", "Country_Name"),
                                "--Select--",
                                new
                                {
                                    @class = "form-control border-redius",
                                    @id = "drpCountryofStay",
                                    @required = ""
                                })
                    </div>
                </div>
            </div>

            <hr />
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-space btn-primary btn-lg" type="submit" id="btnRegister">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section styles{
    <link href="~/assets/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/Scipts/Areas/Admin/AdminRegistion.js"></script>
}


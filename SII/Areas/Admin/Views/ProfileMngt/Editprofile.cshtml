
@{
    ViewBag.Title = "Editprofile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<input type="hidden" id="hdfBaseUrl" value="@Url.Content("~/")" />

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <ul class="breadcrumb">
                    <li><a href="@Url.Content("~/")Admin/ProfileMngt">Profile Management</a> </li>
                    <li><a href="">Student Details</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="heading">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="container">
                <div class="panel panel-default panel-border-color panel-border-color-primary border-login">
                    <div class="tab-container">
                        <div class="tab-content">
                            <div class="panel-body in">
                                <div class="panel-body table-responsive">
                                    <section>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="col-md-12">
                                                    <h4 class="blink_text" style="color:brown; text-align:center">Student Profile Management</h4>
                                                    <a href="@Url.Content("~/")Admin/ProfileMngt" class="btn btn-success pull-right">Back</a>
                                                </div>
                                            </div>
                                        </div>
                                        <form id="frmprofile" style="text-align:left">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="StudentID" id="hdfStudentID" value="@TempData.Peek("StudentID").ToString()" />
                                            <div class="row">
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    <div class="heading" style="text-align:left">
                                                        <h4 class="text-danger text-bold">Personal Details:</h4>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>First Name <spna style="color:red">*</spna></label>
                                                        <input name="FirstName" type="text" required placeholder="First Name" class="form-control allowAlphabetOnly" id="txtFirstName" />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Middle Name <spna style="color:red">*</spna></label>
                                                        <input name="MiddleName" type="text" placeholder="Middle Name" class="form-control allowAlphabetOnly" id="txtMiddleName" />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Last Name <spna style="color:red">*</spna></label>
                                                        <input name="LastName" type="text" required placeholder="Last Name" class="form-control allowAlphabetOnly" id="txtLastName" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Email id<spna style="color:red"> *</spna></label>
                                                        <input name="Email" type="email" placeholder="Email-id" required class="form-control" id="txtEmail" />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Mobile Number<spna style="color:red"> *</spna></label>
                                                        <input name="Mobile" type="text" placeholder="Mobile Number" required class="form-control allownumberonly" pattern="\d{10}" id="txtMobile" maxlength="10" />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>DOB <spna style="color:red"></spna></label>
                                                        <input type="text" class="form-control datetimepicker" name="DateOfBirth" placeholder="DOB" id="txtDateOfBirth" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Country<spna style="color:red"> </spna></label>
                                                        @Html.DropDownList("Country", new SelectList(ViewBag.Country, "Country_id", "Country_Name"),
                                     "--Select--",
                                     new
                                     {
                                         @class = "form-control border-redius",
                                         @id = "drpCountryofStay",
                                         @required = ""
                                     })
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Student Id </label>
                                                        <input readonly disabled type="text" placeholder="Student Id" class="form-control" id="txtStudentID" />
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="row">
                                            <div class="col-md-12">

                                                <button class="btn btn-danger btn-lg" id="btnedit">Edit</button>
                                                <button class="btn btn-success btn-lg" id="btnsave" disabled>Save</button>

                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <link href="~/assets/lib/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />


    <script src="~/Scipts/Layout/Layout.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/assets/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Scipts/Areas/Admin/editprofile.js"></script>

}
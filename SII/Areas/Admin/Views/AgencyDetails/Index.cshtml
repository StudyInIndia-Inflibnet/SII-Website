
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    @*<div class="col-md-12" style="">
            @Html.Partial("_MainTabs")
        </div>*@
    <div class="col-md-12">
        <input type="hidden" id="hdnstudentid" value="0" name="studentid" />
        <div class="panel panel-default panel-border-color panel-border-color-custom">
            <div class="panel-heading">
                Agency
                <div class="tools">
                    <a href="@Url.Content("~/")Admin/Agency" class="btn btn-success">Back</a>
                </div>
            </div>
            <div class="tab-container">
                <ul id="ulMainTab" class="nav nav-tabs">
                    <li class="active"><a href="#_AgencyDetails" data-toggle="tab">Agency Detail</a></li>
                    <li><a href="#_Entitlement" data-toggle="tab">Entitlement</a></li>
                </ul>
                <div class="tab-content">
                    @*Agency Detail*@
                    <div id="_AgencyDetails" class="tab-pane active cont">
                        <form id="frmagencydetails">
                            <input type="hidden" id="hdnagencyid" value="@TempData.Peek("agencyid").ToString()" name="agencyid" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Name of the agency <span style="color: red"> *</span></label>
                                        <input type="text" id="txtnameagency" class="form-control allow_only_alphabet" data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed." maxlength="20" required name="nameofagency" placeholder="Name of the agency">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" id="txtaddress" class="form-control allow_only_alphabet" name="agencyaddress" placeholder="Address" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email<span style="color: red"> *</span></label>
                                        <input type="email" id="txtemail" class="form-control" required name="email" placeholder="Email">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Contact Number<span style="color: red"> *</span></label>
                                        <div class="row">
                                            <div class="col-md-4">
                                                @Html.DropDownList("CountryCode", new SelectList(ViewBag.Country, "Country_id", "country_code"),
                                                "--Select--",
                                                new
                                                {
                                                    @class = "form-control",
                                                    @id = "drpcountrycode",
                                                    @required = ""
                                                })
                                            </div>
                                            <div class="col-md-8">
                                                <input type="text" id="txtMobile" maxlength="12" class="form-control allow_only_number" placeholder="Mobile" name="mobile" required="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="col-md-6">
                                        <div class="form-group">
                                            <label>Password<span style="color: red"> *</span></label>
                                            <input type="password" id="txtpassword" class="form-control" required name="password" placeholder="Password">
                                        </div>
                                    </div>*@
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Type of Agency<span style="color: red"> *</span></label>
                                        <select class="form-control" id="drptypeofagency" required name="typeofagency">
                                            <option value="">-select-</option>
                                            <option value="Government">Government</option>
                                            <option value="Private">Private</option>
                                            <option value="NGO">NGO</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-space btn-primary btn-lg" type="submit" id="btnsaveagency">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    @*Entitlement*@
                    <div id="_Entitlement" class="tab-pane">
                        <form id="frmentitlement">
                            <input type="hidden" id="hdnagencyid" value="@ViewBag.agencyid" name="agencyid" />
                            <input type="hidden" id="hdnid" value="0" name="id" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Name of the Entitlement <span style="color: red"> *</span></label>
                                        @*allow_only_alphabet data-parsley-pattern="/^[A-Za-z ]+$/" data-parsley-pattern-message="Only alphabets allowed."*@ 
                                        <input type="text" id="txtnameEntitlement" class="form-control"  required name="nameofentitlename" placeholder="Name of the Entitlement">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label>Fee Waiver G1 <input type="checkbox" id="chkg1" class="form-control" name="fee_g1" value="1"></label>
                                            </div>
                                            <div class="col-md-3">
                                                <label>Fee Waiver G2 <input type="checkbox" id="chkg2" class="form-control" name="fee_g2" value="1"></label>
                                            </div>
                                            <div class="col-md-3">
                                                <label>Fee Waiver G3 <input type="checkbox" id="chkg3" class="form-control" name="fee_g3" value="1"></label>
                                            </div>
                                            <div class="col-md-3">
                                                <label>Fee Waiver G4 <input type="checkbox" id="chkg4" class="form-control" name="fee_g4" value="1"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Country<span style="color: red"> *</span></label>
                                        @Html.DropDownList("countryid", new SelectList(ViewBag.Country, "Country_id", "Country_Name"),
                                            "--Select--",
                                            new
                                            {
                                                @class = "form-control",
                                                @id = "drpCountryofStay",
                                                @required = ""
                                            })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>No. of Students</label>
                                        <input type="text" id="txtnoofstudent" class="form-control allow_only_number" name="noofstudent" placeholder="No. of Students">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-space btn-primary btn-lg" type="submit" id="btnsave">Save</button>
                                </div>
                            </div>
                        </form>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered table-hover ">
                                    <thead>
                                        <tr>
                                            <th>Srno</th>
                                            <th>Name of the Entitlement</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyentitlement"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles{
    <link href="~/assets/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/Scipts/Areas/Admin/AgencyMaster.js"></script>
    <script src="~/Scipts/Areas/Admin/Agencydetail.js"></script>
}

<div class="row">
    <div class="col-md-12">
        @{
            SIIRepository.Institute.InstituteRepository _objRepository = new SIIRepository.Institute.InstituteRepository();
            System.Data.DataSet _ds = _objRepository.Get_Dashboard_Modal_Data(TempData.Peek("InstituteID").ToString(), "NicheCourses");
            if (_ds != null)
            {
                <h2 class="text-center">Niche Courses</h2>
                <h4>Niche Courses Offer</h4>
                if (_ds.Tables[0].Rows.Count > 0)
                {
                    int indexInternationalCollaboration = 1;

                    <table class="table table-bordered">
                        @foreach (System.Data.DataRow _dr in _ds.Tables[0].Rows)
                        {

                            <tr>
                                <td>@(indexInternationalCollaboration++)</td>
                                <td>
                                    <h4>Niche Courses Details</h4>
                                    <table class="table table-bordered">
                                        <tr>  
                                            <td>Course Type: <strong>@(_dr["CourseType"].ToString() == "1" ? "Long Term Course":"Short Term Course" )</strong></td>
                                            <td>Discipline: <strong>@_dr["Discipline"].ToString()</strong></td>
                                            <td>Program Level: <strong>@_dr["ProgramLevel"].ToString()</strong></td>
                                            <td colspan="2">Name of Course: <strong>@_dr["Natureofcourse"].ToString()</strong></td>
                                        </tr>
                                        <tr>
                                            <td>Branch/Subject: <strong>@_dr["BranchName"].ToString()</strong></td>
                                            <td>Eligibility Criteria: <strong>@_dr["EligibilityCriteria"].ToString()</strong></td>
                                            <td>Additional Facilities: <strong>@_dr["AdditionalFacilities"]</strong></td>
                                            <td><label>Gender Restrictions:</label> <strong>@_dr["GenderRestrictions"].ToString()</strong></td>
                                        </tr>
                                    </table>

                                    <h4>Tution Fees</h4>
                                    <table class="table table-bordered">
                                        <tr> 
                                            <td>Annual Tution Fees per Seat: <strong>@_dr["TutionFees"].ToString() - @_dr["TutionFeesCurrency"].ToString()</strong></td>
                                            <td>Annual Total Fees per Seat: <strong>@_dr["TotalFees"].ToString() - @_dr["TotalFeesCurrency"].ToString()</strong></td>
                                        </tr>                                        
                                        <tr> 
                                            <td>Annual Tuition Fees (SAARC Country): <strong>@_dr["TutionFeesForSAARCCountry"].ToString() - @_dr["TutionFeesForSAARCCountryCurrency"].ToString()</strong></td>
                                            <td>Annual Tuition Fees (NonSAARC Country): <strong>@_dr["TutionFeesForNonSAARCCountry"].ToString() - @_dr["TutionFeesForNonSAARCCountryCurrency"].ToString()</strong></td>
                                        </tr>
                                    </table>
                                     
                                    <h4>Other Details</h4>
                                    <table class="table table-bordered">
                                        <tr>
                                            <td>Credits : <strong>@_dr["Credits"].ToString()</strong></td>
                                            <td>Course Duration(in Months) : <strong>@_dr["CourseDurations"].ToString()</strong></td>
                                            <td>Classroom Hours : <strong>@_dr["ClassRoomHours"].ToString()</strong></td>
                                            <td>Examination/Course Pattern : <strong>@_dr["CoursePatterns"].ToString()</strong></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">Course Description : <strong>@_dr["CourseDesc"].ToString()</strong></td>
                                            <td colspan="2">Admission & entry requirements : <strong>@_dr["AdmissionReq"].ToString()</strong></td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>No data available.</td>
                            </tr>
                        </tbody>
                    </table>
                }
                
            }
            else
            {
                <h2>No data available.</h2>
            }
        }
    </div>
</div>

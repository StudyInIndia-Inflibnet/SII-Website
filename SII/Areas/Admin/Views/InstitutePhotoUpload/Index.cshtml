
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-border-color panel-border-color-primary border-login">
            <div class="tab-container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-body table-responsive">
                            <form id="frmPhotoGallery" method="post">
                                @Html.AntiForgeryToken()
                                <h2>Photo Gallery</h2>
                                <input type="hidden" name="ID" id="hdfPhotoID" value="0" />
                                <input type="hidden" name="CategoryID" id="hdfcateid" value="1" />

                                <div class="row">
                                    <div class="col-md-12">
                                        <button id="btnNewImage" type="button" class="btn btn-primary pull-right">Add New</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Institute&nbsp;<span style="color:red">*</span></label>
                                            @Html.DropDownList("InstituteID", new SelectList(ViewBag.Institute, "InstituteID", "InstituteName"),
                                "--Select--",
                                new
                                {
                                    @class = "form-control",
                                    @id = "drpInstituteID",
                                    @required = ""
                                })
                                        </div>
                                    </div>

                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <label>Image&nbsp;<span style="color:red">*</span></label>
                                            <input type="file" id="fuPhotoImagePath" name="ImagePath" required="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row hide">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Description&nbsp;<span style="color:red">*</span></label>
                                            <textarea class="form-control" name="Description" id="txtPhotoDescription" placeholder="Description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-7">
                                                    <button id="btnSavePhoto" type="submit" class="btn btn-primary">Save</button>
                                                    <button id="btnCancelPhoto" type="reset" class="btn btn-default hide">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles{
    <link href="~/assets/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/assets/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/lib/parsley/parsley.min.js"></script>
    <script src="~/Scipts/Areas/Admin/UploadGallery.js"></script>
}


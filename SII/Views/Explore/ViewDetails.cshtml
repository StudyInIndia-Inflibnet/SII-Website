@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="inner-title-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="inner-title-left">
                    <h2>About Institute</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="inner-ttile-right text-right">
                    <h4><a href="index.php">Home</a> / About Institute</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="service-area section-padding">
    <div class="container">
        <div class="be-content">
            <div class="main-content container-fluid">



                <h2 class="inner-title text-primary">@ViewBag.InstituteName</h2>


                @if (ViewBag.DetailsFor == "HowToReach")
                {
                    @Html.Partial("_HowToReach")
                }
                else if (ViewBag.DetailsFor == "Gallery")
                {
                    @Html.Partial("_Gallery")
                }
                else if (ViewBag.DetailsFor == "GalleryPhoto")
                {
                    @Html.Partial("_GalleryPhoto")
                }
                else if (ViewBag.DetailsFor == "AreaOfExpert")
                {
                    @Html.Partial("_AreaOfExpert")
                }
                else if (ViewBag.DetailsFor == "Campus")
                {
                    @Html.Partial("_Campus")
                }
                else if (ViewBag.DetailsFor == "Courses")
                {
                    if (TempData.Peek("IsNICHECourse").ToString() == "True")
                    {
                        @Html.Partial("_NICHECourse")
                    }
                    else
                    {
                        @Html.Partial("_Course")
                    }
                }
                else if (ViewBag.DetailsFor == "Fees")
                {
                    @Html.Partial("_Fees")
                }
                else if (ViewBag.DetailsFor == "AboutInstitute")
                {
                    @Html.Partial("_AboutInstitute")
                }
                else if (ViewBag.DetailsFor == "NICHECourse")
                {
                    @Html.Partial("_NICHECourseSearch")
                }
                else
                {
                    <h3>Something went wrong! Please try again!</h3>
                }
            </div>
        </div>
    </div>
</div>




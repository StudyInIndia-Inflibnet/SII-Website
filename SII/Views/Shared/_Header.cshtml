<header>
    <!-- header area start -->
    <div class="top-area hidden-xs">
        <div class="container">
            <div class="row">
                @*<div class="col-md-2 hidden-xs hidden-sm"></div>*@
                <div class="col-sm-8 col-md-8 col-xs-12">
                    <div>
                        <a href="~/admission/login" class="top-left cta" target="_blank">
                            <span><span class="hidden-xs hidden-sm">Student Login/Apply</span></span>
                        </a>
                        <a href="~/Institute/login" class="top-left cta" target="_blank">
                            <span><span class="hidden-xs hidden-sm">Institute Login</span></span>
                        </a>
                        <a href="~/channel" class="top-left cta" target="_blank">
                            <span><span class="hidden-xs hidden-sm">Channel</span></span>
                        </a>
                        <a href="https://contest.studyinindia.gov.in/contest" class="top-left cta">
                            <span><span class="hidden-xs hidden-sm">Contest</span></span>
                        </a>
                        <a href="~/faqs" class="top-left cta">
                            <span><span class="hidden-xs hidden-sm">FAQs</span></span>
                        </a>
                        <a href="~/newsfeed" class="top-left cta">
                            <span><span class="hidden-xs hidden-sm">NEWSFEED</span></span>
                        </a>
                        <a href="~/EligibilityCriterias" class="top-left cta">
                            <span><span class="hidden-xs hidden-sm">Institutes Eligibility Criteria</span></span>
                        </a>
                        @*<div class="header_top_right list-unstyled">
                            <div id="google_translate_element"></div>
                            <script type="text/javascript">
                                function googleTranslateElementInit() {
                                    new google.translate.TranslateElement({ pageLanguage: 'en', includedLanguages: 'en,gu,hi', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
                                }
                            </script>
                            <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                        </div>*@
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 text-right col-xs-12">
                    <div class="top-right-social-icon">
                        <a href="https://www.facebook.com/Study-in-India-408981989527352/" target="_blank" class="" title="Facebook"><i class="fa fa-facebook"></i></a>
                        <a href="https://twitter.com/StudyInIndiaGov?lang=en" target="_blank" class="" title="Twitter"><i class="fa fa-twitter"></i></a>
                        <a href="https://www.instagram.com/studyinindiagov/" target="_blank" title="instagram" class=""><i class="fa fa-instagram"></i></a>

                        <form class="pull-right search_part" method="get" action="@Url.Content("~/")Search/Index">
                            <input type="text" name="id" onkeypress="return SubmitOnEnter();" placeholder="Search..">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mb15">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-xs-9">
                    <div class="navbar-header">
                        <a class="navbar-brand home" href="@Url.Content("~/")home" data-animate-hover="bounce"> <img src="~/img/logo.png" class="img-responsive" alt="logo"> </a>
                    </div>
                </div>
                <div class="col-xs-3">
                    <div class="navbar-buttons">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation"> <span class="sr-only">Toggle navigation</span> <i class="fa fa-align-justify"></i> </button>
                    </div>
                </div>
                <div class="col-md-7 hidden-xs mt15">
                    <div class="topThree_box">
                        <div class="left_icon">
                            <i class="fa fa-envelope"></i>
                        </div>
                        <div class="right_content">
                            <p>email us now</p>
                            <h6 style="text-transform:inherit;"><a href="mailto:help.studyinindia@gov.in">help.studyinindia@gov.in</a></h6>
                        </div>
                    </div>
                    <div class="topThree_box">
                        <div class="left_icon">
                            <i class="fa fa-phone-square"></i>
                        </div>
                        <div class="right_content">
                            <p>For Any Support Dial Our</p>
                            <h6><a href="Tel:919899450350">Toll Free +91 9899-450-350</a></h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-xs-3">
                    <div class="mhrd_logo hidden-xs"><a href="https://www.mhrd.gov.in" target="_blank" class="p0"> <img src="~/img/mhrd.png" class="img-responsive pull-right" /> </a></div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    @Html.Partial("_Menu")
    <!-- header area end -->
</header>
